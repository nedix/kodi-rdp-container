{
  extends: [
    "https://raw.githubusercontent.com/nedix/actions/main/renovate.json5",
  ],
  customManagers: [
    {
      depNameTemplate: "Fedora",
      fileMatch: ["^Containerfile$"],
      matchStrings: ["ARG FEDORA_VERSION=(?<currentValue>.*?)\\n"],
      datasourceTemplate: "custom.fedora",
      packageNameTemplate: "fedora",
      versioningTemplate: "loose",
    },
    {
      depNameTemplate: "s6-overlay",
      fileMatch: ["^Containerfile$"],
      matchStrings: ["ARG S6_OVERLAY_VERSION=(?<currentValue>.*?)\\n"],
      datasourceTemplate: "github-tags",
      packageNameTemplate: "just-containers/s6-overlay",
    },
  ],
  customDatasources: {
    fedora: {
      defaultRegistryUrlTemplate: "https://fedoraproject.org/releases.json",
      transformTemplates: ['{ "releases": $map($, function($v) { { "version": $v.version } }) }'],
    },
  },
  packageRules: [
    {
      description: "Custom versioning for s6-overlay",
      matchPackageNames: ["just-containers/s6-overlay"],
      extractVersion: "^v(?<version>.*)$",
      versioning: "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$",
    },
  ],
}
